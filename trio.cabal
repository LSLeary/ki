cabal-version: 2.4
name: trio
version: 0

library
  build-depends: base, concurrency, constraints
  default-language: Haskell2010
  exposed-modules: Trio, Trio.Internal
  ghc-options: -Wall
  hs-source-dirs: src
  other-modules: Trio.Internal.Conc, Trio.Internal.Semaphore

test-suite tests
  build-depends: base, dejafu, trio
  default-language: Haskell2010
  hs-source-dirs: test
  main-is: Test.hs
  type: exitcode-stdio-1.0
